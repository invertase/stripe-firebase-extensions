{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "target": "ES6",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "types": ["mocha", "chai", "sinon-chai", "chai-as-promised"]
  },
  "include": ["src/*.ts", "test/*.ts"],
  "exclude": ["node_modules"]
}
