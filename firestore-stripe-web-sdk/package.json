{
  "name": "@invertase/firestore-stripe-payments",
  "version": "0.0.7",
  "description": "Client SDK for the firestore-stripe-payments Firebase Extension",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "api-documenter": "api-documenter markdown --input-folder temp --output-folder markdown",
    "api-extractor": "api-extractor run --verbose",
    "api-extractor:local": "npm run build && api-extractor run --local --verbose",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "node ./postbuild.js",
    "test": "cd _emulator && firebase emulators:exec \"cd .. && vitest\"",
    "test:watch": "cd _emulator && firebase emulators:exec \"cd .. && vitest watch\"",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "firebase",
    "payments",
    "subscriptions",
    "stripe"
  ],
  "author": "Stripe (https://stripe.com/)",
  "contributors": [
    "Firebase <firebase-support@google.com> (https://firebase.google.com/)"
  ],
  "license": "Apache-2.0",
  "files": [
    "lib/",
    "LICENSE",
    "NOTICE.txt",
    "README.md"
  ],
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.65",
    "@microsoft/api-extractor": "^7.18.17",
    "@vitest/coverage-v8": "^1.3.1",
    "firebase-tools": "^9.18.0",
    "replace-in-file": "^6.2.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@firebase/app": "^0.11.5",
    "@firebase/auth": "^1.10.5",
    "@firebase/firestore": "^4.7.15"
  }
}
