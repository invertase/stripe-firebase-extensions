{
  "name": "firestore-stripe-payments",
  "version": "1.0.0",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "clean:node_modules": "rimraf node_modules",
    "build": "npm run clean:node_modules && npm run clean && npm i --workspaces=false && tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "compile": "tsc",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md",
    "test": "cd ../_emulator && firebase emulators:exec -P demo-project \"jest --config=../functions/jest.config.js\"",
    "start:emulator": "cd ../_emulator && firebase emulators:start -P demo-project",
    "exec:emulator": "cd ../_emulator && firebase emulators:exec \"../runTests.sh\" -P demo-project",
    "exec:emulator:watch": "cd ../_emulator && firebase emulators:exec \"../runTestsWatch.sh\" -P demo-project",
    "setup:webhooks": "ts-node ./__tests__/helpers/setupProxy.ts",
    "ext:install": "cd ../_emulator && firebase ext:install .. -P dev-extensions-testing",
    "ext:deploy": "cd ../_emulator && firebase deploy --only=extensions --project=dev-extensions-testing"
  },
  "author": "Stripe (https://stripe.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/node": "^18.15.3",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^3.21.2",
    "rimraf": "^3.0.2",
    "stripe": "11.15.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@stripe/stripe-js": "^2.2.0",
    "@types/chai": "^4.1.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "envfile": "^6.17.0",
    "firebase-functions-test": "^0.3.3",
    "jest": "^29.7.0",
    "mocked-env": "^1.3.5",
    "puppeteer": "^14.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "private": true
}
