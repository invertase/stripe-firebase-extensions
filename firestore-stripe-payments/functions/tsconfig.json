{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src", "./__tests__"],
  "exclude": ["node_modules"]
}
